import java.util.HashMap;
import javax.swing.JOptionPane;

public class ListaAlumnos {
	/*
	 Crea un programa que permita a un profesor registrar las notas de sus estudiantes.
	 Utiliza un HashMap donde las claves sean los nombres de los estudiantes y los valores sean las notas 
	 correspondientes. El programa debe permitir al profesor agregar estudiantes y 
	 asignar sus notas, así como también consultar la nota de un estudiante específico.
	 */
	String menu, opc, nombre;
	Double nota = 0.0;
	Integer count = 0;
	HashMap<String, Double> listraNotas;
	public void iniciar() {
		menu();
	}
	
	public void menu() {
		menu = "------- Menu Principal ------";
		menu += "\n1.Ingresar Alumnos";
		menu += "\n2.Asignar Notas";
		menu += "\n3.Consultar Notas";
		menu += "\n4.Eliminar Estudiante";
		menu += "\n5.Salir";
		menu += "\nIngrese una opcion";	
		do {
			opc = JOptionPane.showInputDialog(menu);
			acciones(opc);
		} while (!opc.equals("5"));
		
	}

	private void acciones(String opcion) {
		switch (opcion) {
		case "1":
			nombre = JOptionPane.showInputDialog("ingrese el alumno que consultar la nota");
			ingresoAlumno(listraNotas, nombre);
			count = 1;
			break;
		case "2":if (count >0) {
				
			}else {
				System.out.println("Tiene que ingresar un alumno antes de realizar cuanlquier accion "
						+ "en el programa");
			}
			break;
		case "3":if (count >0) {
				nombre = JOptionPane.showInputDialog("ingrese el alumno que consultar la nota");
				consultarAlumno(listraNotas, nombre);
			}else {
				System.out.println("Tiene que ingresar un alumno antes de realizar cuanlquier accion "
						+ "en el programa");
			}
			break;
		case "4":if (count >0) {
				System.out.println("hola");
			}else {
				System.out.println("Tiene que ingresar un alumno antes de realizar cuanlquier accion "
						+ "en el programa");
			}
			break;
		case "5": break;
		default:
			System.out.println("ingrese una opcion valida");
			break;
		}
		
	}
	
	public void ingresoAlumno(HashMap<String, Double> listaNotas,String alumno){
		listaNotas.put(nombre, nota);
	}
		
	public void eliminarAlumno(HashMap<String, Double> listaNotas,String alumno){
			
	}
		
	public void consultarAlumno(HashMap<String, Double> listaNotas,String alumno){
		if (listaNotas.containsKey(alumno)) {
			if (listaNotas.containsValue(0.0)) {
				System.out.println("el estudiante: " + alumno + " aun no cuenta con una nota");
			} else {
				System.out.println("el estudiante: " + alumno + " nota: " + listaNotas.get(alumno));
			}
		}else {
			System.out.println("El estudiante" + alumno + " no se encontro, ingrese al estudiante o "
					+ "verifique cual es el estudiantre que quiere ingresar");
		}		
					
	}
	
	public void ingresonotas(HashMap<String, Double> listaNotas,String nombre){
			
	}
	
	
	
	
}
